<% if notice.present? %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>


<%= link_to "New food journal", new_food_journal_path %>
<br><br>
<h1>Food journal</h1>

<div id="food_journals">
  <table class="table table-striped table-hover">
    <tr>
      <th scope="col">Date</th>
      <th scope="col">Time</th>
      <th scope="col">Dishes</th>
      <th scope="col">Actions</th>
    </tr>
    <% @food_journals.each do |food_journal| %>
      <%= render food_journal %>
    <% end %>
  </table>
</div>

